{
  "name": "keymotion-trainer",
  "displayName": "KeyMotion Trainer (Preview)",
  "description": "Practice Helix/Vim/Kakoune-like movements in a safe training buffer.",
  "publisher": "jmwatte",
  "version": "0.0.1",
  "engines": { "vscode": "^1.85.0" },
  "categories": ["Education"],
  "activationEvents": [],
  "contributes": {
    "commands": [
      { "command": "keymotion.startTraining", "title": "KeyMotion: Start Training" },
      { "command": "keymotion.stopTraining", "title": "KeyMotion: Stop Training" },
      { "command": "keymotion.toggleTraining", "title": "KeyMotion: Toggle Training" },
      { "command": "keymotion.calibrate", "title": "KeyMotion: Calibrate Keyboard" },
      { "command": "keymotion.type", "title": "KeyMotion: Type (internal)" }
    ],
    "keybindings": [
      { "command": "keymotion.type", "args": { "key": "h" }, "key": "h", "when": "keymotion.training && editorTextFocus && !inputFocus" },
      { "command": "keymotion.type", "args": { "key": "j" }, "key": "j", "when": "keymotion.training && editorTextFocus && !inputFocus" },
      { "command": "keymotion.type", "args": { "key": "k" }, "key": "k", "when": "keymotion.training && editorTextFocus && !inputFocus" },
      { "command": "keymotion.type", "args": { "key": "l" }, "key": "l", "when": "keymotion.training && editorTextFocus && !inputFocus" },
      { "command": "keymotion.type", "args": { "key": "w" }, "key": "w", "when": "keymotion.training && editorTextFocus && !inputFocus" },
      { "command": "keymotion.type", "args": { "key": "d" }, "key": "d", "when": "keymotion.training && editorTextFocus && !inputFocus" },
  { "command": "keymotion.type", "args": { "key": "Escape" }, "key": "escape", "when": "keymotion.training && editorTextFocus && !inputFocus" },
  { "command": "keymotion.type", "args": { "key": "h" }, "key": "left",  "when": "keymotion.training && editorTextFocus && !inputFocus" },
  { "command": "keymotion.type", "args": { "key": "j" }, "key": "down",  "when": "keymotion.training && editorTextFocus && !inputFocus" },
  { "command": "keymotion.type", "args": { "key": "k" }, "key": "up",    "when": "keymotion.training && editorTextFocus && !inputFocus" },
  { "command": "keymotion.type", "args": { "key": "l" }, "key": "right", "when": "keymotion.training && editorTextFocus && !inputFocus" }
    ],
    "configuration": {
      "title": "KeyMotion Trainer",
      "properties": {
        "keymotion.keyboardDispatch": {
          "type": "string",
          "enum": ["auto", "code", "keyCode"],
          "default": "auto",
          "description": "Normalize key matching based on VS Code keyboard.dispatch behavior."
        }
      }
    }
  },
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^18.0.0",
    "typescript": "^5.3.0",
    "vsce": "^2.15.0"
  }
}
